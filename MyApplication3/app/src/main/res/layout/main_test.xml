<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/timg3">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#4000"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17dp"
            android:text="按键状态"/>
        <TextView
            android:id="@+id/tv_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17dp"
            android:text="左按键： 停止状态...  步长; 03 "/>
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17dp"
            android:text="右按键： 停止状态...  步长; 03 "/>
        <TextView
            android:id="@+id/tv_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17dp"
            android:text="上按键： 停止状态...  步长; 03 "/>
        <TextView
            android:id="@+id/tv_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17dp"
            android:text="下按键： 停止状态...  步长; 03 "/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#4000"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17dp"
            android:text="各个舵机磁编码值"/>
        <TextView
            android:id="@+id/mTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17dp"
            android:text="2014 2014 2014 2014 2014 2014 " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#4000"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17dp"
            android:text="末端机构状态"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17dp"
            android:text="真空吸杯 ： 开启 " />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17dp"
            android:text="夹持器 ： 开启 " />
    </LinearLayout>


    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="3L"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_blu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_blu"
                android:gravity="center"
                android:text="3R"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="4L"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_blu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="4R"
                android:textColor="#fff"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_blu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="5L"
                android:textColor="#fff"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/btn_blu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="5R"
                android:textColor="#fff"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_blu"/>
        </LinearLayout>



    </LinearLayout>

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1"/>-->
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="前"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_blu"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="后"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_blu"/>

        <Space
            android:id="@+id/s1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/down"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@id/s1"
            android:layout_alignLeft="@id/s1"
            android:background="@drawable/down"/>

        <Button
            android:id="@+id/up"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_above="@id/s1"
            android:layout_alignLeft="@id/s1"
            android:background="@drawable/up"/>

        <Button
            android:id="@+id/left"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@id/up"
            android:layout_toLeftOf="@id/s1"
            android:background="@drawable/left"/>

        <Button
            android:id="@+id/right"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@id/up"
            android:layout_toRightOf="@id/s1"
            android:background="@drawable/right"/>

    </RelativeLayout>



    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:visibility="visible">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="真空吸杯"
            android:textColor="#fff"
            android:layout_margin="8dp"
            android:background="@drawable/search_edittext_shape"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="夹持器"
            android:layout_margin="8dp"
            android:background="@drawable/search_edittext_shape"/>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <EditText
            android:id="@+id/mEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:hint="send commands by Hex" >
            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send" />

    </LinearLayout>

</LinearLayout>
